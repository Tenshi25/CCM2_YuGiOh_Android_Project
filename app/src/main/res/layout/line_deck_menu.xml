<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_lineDeck_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/tv_name_deck" />

    <TextView
        android:id="@+id/tv_lineDeck_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/tv_desc_deck" />

    <Button
        android:id="@+id/bt_toModifDeck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onClickModifyDeck"
        android:text="@string/bt_Modify_deck" />

    <ImageButton
        android:id="@+id/bt_delDeck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="#DDA00F0F"
        android:onClick="onClickDeleteDeck"
        app:srcCompat="@android:drawable/ic_menu_delete" />

</LinearLayout>
